<h2 class="font-bold text-5xl text-center my-10">ユーザーログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field text-center text-2xl my-10">
    <%= f.label t('login.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field  text-center text-2xl my-10">
    <%= f.label t('login.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-center text-2xl my-10">
      <%= f.check_box :remember_me %>
      <%= f.label t('login.remember_me') %>
    </div>
  <% end %>

  <div class="flex justify-center space-x-4">
    <div class="actions">
      <%= f.submit "ログイン", class:"bg-blue-500 text-white px-5 py-3 rounded"%>
    </div>

    <div class="flex items-center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "サインアップ", new_registration_path(resource_name), class:"bg-blue-500 text-white px-5 py-3 rounded" %><br />
      <% end %>   
    </div>

    <div class="flex items-center">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t('login.password_forget'), new_password_path(resource_name) , class:"bg-blue-500 text-white px-5 py-3 rounded"%><br />
      <% end %>
    </div>
  </div>
  
<% end %>


