<h1 class="font-bold text-center text-5xl my-10">イベント作成</h1>
<%= form_with model: @ivent do |form| %>
  <div class="flex flex-col items-center space-y-5">
    <div class="flex flex-col">
      <%= form.label "イベント名" %>
      <%= form.text_field :name , class:"bg-blue-100 text-3xl rounded"%>
    </div>
    <div>
      <%= form.submit "イベントを登録する", class:"text-2xl bg-blue-200 px-5 py-3 rounded" %>
    </div>
  </div>
  
<% end %>

<div class="text-center rounded px-5 my-10">
  <%= link_to "イベント一覧に戻る", ivents_path , class:"bg-slate-200 px-5 py-3 rounded"%>
</div>
